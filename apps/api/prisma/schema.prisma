generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  name      String
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  connectedAccounts ConnectedAccount[]
  downloadedVideos  DownloadedVideo[]
  uploadJobs        UploadJob[]

  @@map("users")
}

enum Platform {
  YOUTUBE
  TIKTOK
}

model ConnectedAccount {
  id             String   @id @default(uuid()) @db.Uuid
  userId         String   @map("user_id") @db.Uuid
  platform       Platform
  platformUserId String   @map("platform_user_id")
  displayName    String   @map("display_name")
  avatarUrl      String?  @map("avatar_url")

  accessTokenEncrypted  Bytes  @map("access_token_encrypted")
  refreshTokenEncrypted Bytes? @map("refresh_token_encrypted")
  tokenIv               Bytes  @map("token_iv")
  tokenAuthTag          Bytes  @map("token_auth_tag")
  keyVersion            Int    @default(1) @map("key_version")

  tokenExpiresAt DateTime? @map("token_expires_at")
  scopes         String[]
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  channels Channel[]

  @@unique([userId, platform, platformUserId])
  @@index([userId])
  @@map("connected_accounts")
}

model TrendingVideo {
  id              String   @id @default(uuid()) @db.Uuid
  platform        Platform
  platformVideoId String   @map("platform_video_id")
  region          String   @db.VarChar(5)
  title           String
  description     String?  @db.Text
  thumbnailUrl    String?  @map("thumbnail_url")
  channelName     String?  @map("channel_name")
  channelId       String?  @map("channel_id")
  duration        Int?     // seconds
  viewCount       BigInt?  @map("view_count")
  likeCount       BigInt?  @map("like_count")
  commentCount    BigInt?  @map("comment_count")
  shareCount      BigInt?  @map("share_count")
  publishedAt     DateTime? @map("published_at")
  trendingRank    Int?     @map("trending_rank")
  category        String?
  tags            String[]
  rawMetadata     Json?    @map("raw_metadata")
  fetchedAt       DateTime @default(now()) @map("fetched_at")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  downloadedVideos DownloadedVideo[]

  @@unique([platform, platformVideoId, region])
  @@index([platform, region])
  @@index([fetchedAt])
  @@map("trending_videos")
}

enum DownloadStatus {
  PENDING
  DOWNLOADING
  COMPLETED
  FAILED
  CANCELLED
}

model DownloadedVideo {
  id              String         @id @default(uuid()) @db.Uuid
  userId          String         @map("user_id") @db.Uuid
  trendingVideoId String         @map("trending_video_id") @db.Uuid
  platform        Platform
  platformVideoId String         @map("platform_video_id")
  title           String
  description     String?        @db.Text
  thumbnailUrl    String?        @map("thumbnail_url")
  duration        Int?           // seconds
  status          DownloadStatus @default(PENDING)
  bullmqJobId     String?        @map("bullmq_job_id")
  storageKey      String?        @map("storage_key")
  storageBucket   String?        @map("storage_bucket")
  fileSize        BigInt?        @map("file_size")
  mimeType        String?        @map("mime_type")
  resolution      String?
  progress        Int            @default(0)
  errorMessage    String?        @map("error_message") @db.Text
  downloadedAt    DateTime?      @map("downloaded_at")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  trendingVideo TrendingVideo @relation(fields: [trendingVideoId], references: [id], onDelete: Cascade)
  uploadJobs    UploadJob[]

  @@unique([userId, platform, platformVideoId])
  @@index([userId, status])
  @@index([status])
  @@map("downloaded_videos")
}

// --- Phase 4: Upload & OAuth ---

enum UploadStatus {
  PENDING
  UPLOADING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

model Channel {
  id                 String   @id @default(uuid()) @db.Uuid
  connectedAccountId String   @map("connected_account_id") @db.Uuid
  platform           Platform
  platformChannelId  String   @map("platform_channel_id")
  name               String
  avatarUrl          String?  @map("avatar_url")
  region             String?  @db.VarChar(5)
  subscriberCount    BigInt?  @map("subscriber_count")
  totalViews         BigInt?  @map("total_views")
  videoCount         Int?     @map("video_count")
  isActive           Boolean  @default(true) @map("is_active")
  lastSyncedAt       DateTime? @map("last_synced_at")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  connectedAccount ConnectedAccount @relation(fields: [connectedAccountId], references: [id], onDelete: Cascade)
  uploadJobs       UploadJob[]
  publishedVideos  PublishedVideo[]

  @@unique([connectedAccountId, platformChannelId])
  @@index([connectedAccountId])
  @@map("channels")
}

model UploadJob {
  id                String       @id @default(uuid()) @db.Uuid
  userId            String       @map("user_id") @db.Uuid
  downloadedVideoId String       @map("downloaded_video_id") @db.Uuid
  channelId         String       @map("channel_id") @db.Uuid
  platform          Platform
  title             String
  description       String?      @db.Text
  tags              String[]
  privacyStatus     String       @default("private") @map("privacy_status")
  uploadMode        String?      @map("upload_mode") // 'direct_post' | 'inbox' (TikTok only)
  status            UploadStatus @default(PENDING)
  bullmqJobId       String?      @map("bullmq_job_id")
  platformVideoId   String?      @map("platform_video_id")
  publishUrl        String?      @map("publish_url")
  progress          Int          @default(0)
  errorMessage      String?      @map("error_message") @db.Text
  uploadedAt        DateTime?    @map("uploaded_at")
  createdAt         DateTime     @default(now()) @map("created_at")
  updatedAt         DateTime     @updatedAt @map("updated_at")

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  downloadedVideo DownloadedVideo @relation(fields: [downloadedVideoId], references: [id], onDelete: Cascade)
  channel         Channel         @relation(fields: [channelId], references: [id], onDelete: Cascade)
  publishedVideo  PublishedVideo?

  @@index([userId, status])
  @@index([channelId])
  @@index([downloadedVideoId])
  @@index([status])
  @@map("upload_jobs")
}

model PublishedVideo {
  id              String    @id @default(uuid()) @db.Uuid
  channelId       String    @map("channel_id") @db.Uuid
  uploadJobId     String?   @unique @map("upload_job_id") @db.Uuid
  platform        Platform
  platformVideoId String    @map("platform_video_id")
  title           String
  description     String?   @db.Text
  thumbnailUrl    String?   @map("thumbnail_url")
  privacyStatus   String?   @map("privacy_status")
  duration        Int?
  tags            String[]
  viewCount       BigInt?   @default(0) @map("view_count")
  likeCount       BigInt?   @default(0) @map("like_count")
  commentCount    BigInt?   @default(0) @map("comment_count")
  shareCount      BigInt?   @default(0) @map("share_count")
  lastStatsSyncAt DateTime? @map("last_stats_sync_at")
  publishedAt     DateTime? @map("published_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  channel          Channel              @relation(fields: [channelId], references: [id], onDelete: Cascade)
  uploadJob        UploadJob?           @relation(fields: [uploadJobId], references: [id], onDelete: SetNull)
  statsSnapshots   VideoStatsSnapshot[]

  @@unique([channelId, platformVideoId])
  @@index([channelId])
  @@index([platform, platformVideoId])
  @@map("published_videos")
}

// --- Phase 5: Channel Management & Analytics ---

model VideoStatsSnapshot {
  id               String   @id @default(uuid()) @db.Uuid
  publishedVideoId String   @map("published_video_id") @db.Uuid
  viewCount        BigInt   @default(0) @map("view_count")
  likeCount        BigInt   @default(0) @map("like_count")
  commentCount     BigInt   @default(0) @map("comment_count")
  shareCount       BigInt   @default(0) @map("share_count")
  engagementRate   Float?   @map("engagement_rate")
  isWeeklySummary  Boolean  @default(false) @map("is_weekly_summary")
  snapshotAt       DateTime @map("snapshot_at")
  createdAt        DateTime @default(now()) @map("created_at")

  publishedVideo PublishedVideo @relation(fields: [publishedVideoId], references: [id], onDelete: Cascade)

  @@index([publishedVideoId, snapshotAt])
  @@index([snapshotAt])
  @@map("video_stats_snapshots")
}
